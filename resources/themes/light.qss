/* EchoNote Light Theme */

/* Global Styles */
* {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
}

QMainWindow {
    background-color: #f5f5f5;
}

/* Page Title */
QLabel#page_title {
    font-size: 20px;
    font-weight: bold;
    color: #333333;
    padding: 5px 0px 10px 0px;
}

/* Section Title */
QLabel#section_title {
    font-size: 16px;
    font-weight: bold;
    color: #333333;
    padding: 5px 0px;
}

/* General Labels */
QLabel#engine_label {
    color: #333333;
    background-color: transparent;
}

/* Sidebar Styles */
#sidebar {
    background-color: #2c2c2c;
    border-right: 1px solid #1a1a1a;
}

#sidebar QPushButton {
    background-color: transparent;
    color: #f0f0f0;
    border: none;
    text-align: left;
    padding: 12px 20px;
    margin: 2px 8px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
}

#sidebar QPushButton:hover {
    background-color: rgba(255, 255, 255, 0.15);
    color: #ffffff;
}

#sidebar QPushButton:checked,
#sidebar QPushButton[active="true"] {
    background-color: #0078d4;
    color: #ffffff;
    font-weight: 600;
}

#sidebar QPushButton:pressed {
    background-color: #005a9e;
    color: #ffffff;
}

/* Content Area Styles */
QWidget {
    background-color: #ffffff;
    color: #333333;
}

/* Labels */
QLabel {
    color: #333333;
    background-color: transparent;
}

/* Settings Dialog Labels */
QDialog QLabel {
    color: #212529;
    font-size: 13px;
}

#error_message {
    color: #d32f2f;
    font-weight: bold;
}

/* Buttons */
QPushButton {
    background-color: #0078d4;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    min-width: 80px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #106ebe;
    color: #ffffff;
}

QPushButton:pressed {
    background-color: #005a9e;
    color: #ffffff;
}

QPushButton:disabled {
    background-color: #e0e0e0;
    color: #999999;
}

/* Secondary Buttons */
QPushButton[secondary="true"] {
    background-color: #f5f5f5;
    color: #1a1a1a;
    border: 2px solid #d0d0d0;
    font-weight: 500;
}

QPushButton[secondary="true"]:hover {
    background-color: #e8e8e8;
    color: #000000;
    border: 2px solid #b0b0b0;
}

QPushButton[secondary="true"]:pressed {
    background-color: #d0d0d0;
    color: #000000;
}

/* Text Inputs */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
    padding: 6px 10px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #0078d4;
    padding: 5px 9px;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #f5f5f5;
    color: #999999;
}

#error_details {
    background-color: #fff8f8;
    border: 1px solid #ffcccc;
    font-family: "Courier New", Courier, monospace;
    font-size: 12px;
}

/* Combo Boxes */
QComboBox {
    background-color: #ffffff;
    color: #212529;
    border: 2px solid #dee2e6;
    border-radius: 6px;
    padding: 10px 16px;
    padding-right: 36px;
    min-width: 160px;
    max-width: 320px;
    min-height: 38px;
    font-size: 14px;
    font-weight: 500;
}

QComboBox:hover {
    background-color: #f8f9fa;
    border: 2px solid #adb5bd;
}

QComboBox:focus {
    background-color: #ffffff;
    border: 2px solid #0078d4;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
    background-color: transparent;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 7px solid #495057;
    margin-right: 10px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #212529;
    border: 2px solid #dee2e6;
    border-radius: 6px;
    padding: 4px;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 8px 12px;
    border-radius: 4px;
    min-height: 32px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #f8f9fa;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

/* Progress Bars */
QProgressBar {
    background-color: #e0e0e0;
    border: none;
    border-radius: 4px;
    height: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #0078d4;
    border-radius: 4px;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Dialogs */
QDialog {
    background-color: #ffffff;
}

/* Dialog Buttons - Ensure high contrast */
QDialog QPushButton {
    background-color: #0078d4;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    min-width: 90px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QDialog QPushButton:hover {
    background-color: #106ebe;
    color: #ffffff;
}

QDialog QPushButton:pressed {
    background-color: #005a9e;
    color: #ffffff;
}

QDialog QPushButton:disabled {
    background-color: #e0e0e0;
    color: #999999;
}

/* Dialog Secondary Buttons */
QDialog QPushButton[secondary="true"] {
    background-color: #f5f5f5;
    color: #000000;
    border: 2px solid #d0d0d0;
    font-weight: 600;
}

QDialog QPushButton[secondary="true"]:hover {
    background-color: #e8e8e8;
    color: #000000;
    border: 2px solid #b0b0b0;
}

QDialog QPushButton[secondary="true"]:pressed {
    background-color: #d0d0d0;
    color: #000000;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #d0d0d0;
    background-color: #ffffff;
}

QTabBar::tab {
    background-color: #f0f0f0;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-bottom: 2px solid #0078d4;
}

QTabBar::tab:hover {
    background-color: #e8e8e8;
}

/* Lists */
QListWidget, QTreeWidget, QTableWidget {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QListWidget::item, QTreeWidget::item, QTableWidget::item {
    padding: 8px;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #e8f4fd;
}

/* Headers */
QHeaderView::section {
    background-color: #f0f0f0;
    color: #333333;
    border: none;
    border-right: 1px solid #d0d0d0;
    border-bottom: 1px solid #d0d0d0;
    padding: 8px;
    font-weight: bold;
}

/* Checkboxes */
QCheckBox {
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #d0d0d0;
    border-radius: 3px;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEwIDNMNC41IDguNUwyIDYiIHN0cm9rZT0id2hpdGUiIHN0cm9rZS13aWR0aD0iMiIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIiBzdHJva2UtbGluZWpvaW49InJvdW5kIi8+Cjwvc3ZnPgo=);
}

QCheckBox::indicator:hover {
    border-color: #0078d4;
}

/* Radio Buttons */
QRadioButton {
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #d0d0d0;
    border-radius: 9px;
    background-color: #ffffff;
}

QRadioButton::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
}

QRadioButton::indicator:checked::after {
    content: "";
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background-color: #ffffff;
}

QRadioButton::indicator:hover {
    border-color: #0078d4;
}

/* Sliders */
QSlider::groove:horizontal {
    background-color: #e0e0e0;
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #0078d4;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #106ebe;
}

/* Tooltips */
QToolTip {
    background-color: #333333;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
}

/* Menu Bar */
QMenuBar {
    background-color: #ffffff;
    color: #333333;
    border-bottom: 1px solid #d0d0d0;
}

QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #e8f4fd;
}

QMenuBar::item:pressed {
    background-color: #d0e8f7;
}

/* Menus */
QMenu {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QMenu::item {
    padding: 8px 24px 8px 12px;
}

QMenu::item:selected {
    background-color: #e8f4fd;
}

QMenu::separator {
    height: 1px;
    background-color: #d0d0d0;
    margin: 4px 0;
}

/* Status Bar */
QStatusBar {
    background-color: #f0f0f0;
    color: #333333;
    border-top: 1px solid #d0d0d0;
}

/* Timeline Event Cards */
#event_card {
    background-color: #ffffff;
    border: 1px solid #E0E0E0;
    border-radius: 8px;
}

#event_card:hover {
    border: 2px solid #2196F3;
}

#event_card QLabel {
    background-color: transparent;
    color: #333333;
}

#event_card QLabel#time_label,
#event_card QLabel#detail_label {
    color: #666666;
}

#event_card QLabel#description_label {
    color: #888888;
}

#event_card QLabel#no_artifacts_label {
    color: #999999;
}

/* Timeline Event Card Buttons */
QPushButton#recording_btn {
    background-color: rgba(33, 150, 243, 0.1);
    border: 2px solid #2196F3;
    border-radius: 6px;
    padding: 8px 16px;
    color: #1976d2;
    font-weight: 600;
    font-size: 14px;
    min-height: 32px;
}

QPushButton#recording_btn:hover {
    background-color: rgba(33, 150, 243, 0.2);
    color: #0d47a1;
}

QPushButton#recording_btn:pressed {
    background-color: rgba(33, 150, 243, 0.3);
    color: #1565c0;
}

QPushButton#transcript_btn {
    background-color: rgba(76, 175, 80, 0.1);
    border: 2px solid #4CAF50;
    border-radius: 6px;
    padding: 8px 16px;
    color: #2e7d32;
    font-weight: 600;
    font-size: 14px;
    min-height: 32px;
}

QPushButton#transcript_btn:hover {
    background-color: rgba(76, 175, 80, 0.2);
    color: #1b5e20;
}

QPushButton#transcript_btn:pressed {
    background-color: rgba(76, 175, 80, 0.3);
    color: #388e3c;
}

/* Timeline Transcript Viewer Buttons */
QPushButton#timeline_copy_btn {
    background-color: rgba(33, 150, 243, 0.1);
    border: 2px solid #2196F3;
    border-radius: 6px;
    padding: 8px 20px;
    color: #1976d2;
    font-weight: 600;
    font-size: 14px;
    min-height: 36px;
}

QPushButton#timeline_copy_btn:hover {
    background-color: rgba(33, 150, 243, 0.2);
    color: #0d47a1;
}

QPushButton#timeline_copy_btn:pressed {
    background-color: rgba(33, 150, 243, 0.3);
    color: #1565c0;
}

QPushButton#timeline_export_btn {
    background-color: rgba(76, 175, 80, 0.1);
    border: 2px solid #4CAF50;
    border-radius: 6px;
    padding: 8px 20px;
    color: #2e7d32;
    font-weight: 600;
    font-size: 14px;
    min-height: 36px;
}

QPushButton#timeline_export_btn:hover {
    background-color: rgba(76, 175, 80, 0.2);
    color: #1b5e20;
}

QPushButton#timeline_export_btn:pressed {
    background-color: rgba(76, 175, 80, 0.3);
    color: #388e3c;
}

QPushButton#timeline_close_btn {
    background-color: #0078d4;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    min-width: 90px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#timeline_close_btn:hover {
    background-color: #106ebe;
    color: #ffffff;
}

QPushButton#timeline_close_btn:pressed {
    background-color: #005a9e;
    color: #ffffff;
}

/* Timeline Transcript Text Edit */
QTextEdit#timeline_transcript_text {
    background-color: #ffffff;
    color: #212529;
    border: 2px solid #dee2e6;
    border-radius: 6px;
    padding: 12px;
    font-family: "SF Mono", "Monaco", "Consolas", "Courier New", Courier, monospace;
    font-size: 12px;
    line-height: 1.6;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

/* Realtime Record Text Areas - Enhanced */

/* Transcription Text Area - Pure white background with improved readability */
QPlainTextEdit#transcription_text {
    background-color: #ffffff;
    color: #212529;
    border: 2px solid #dee2e6;
    border-radius: 6px;
    padding: 12px;
    font-family: "SF Mono", "Monaco", "Consolas", "Courier New", Courier, monospace;
    font-size: 14px;
    line-height: 1.6;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

/* Translation Text Area - Subtle background difference for visual distinction */
QPlainTextEdit#translation_text {
    background-color: #f8f9fa;
    color: #212529;
    border: 2px solid #dee2e6;
    border-radius: 6px;
    padding: 12px;
    font-family: "SF Mono", "Monaco", "Consolas", "Courier New", Courier, monospace;
    font-size: 14px;
    line-height: 1.6;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

/* Translation Text Area - Disabled State */
QPlainTextEdit#translation_text:disabled {
    background-color: #e9ecef;
    color: #6c757d;
    border: 2px solid #ced4da;
}

/* Focus States for Text Areas */
QPlainTextEdit#transcription_text:focus {
    background-color: #f8f9fa;
    border: 2px solid #0078d4;
}

QPlainTextEdit#translation_text:focus {
    background-color: #ffffff;
    border: 2px solid #0078d4;
}

/* Custom Scrollbars for Transcription Text Area */
QPlainTextEdit#transcription_text QScrollBar:vertical {
    background-color: #f8f9fa;
    width: 10px;
    border: none;
    border-radius: 5px;
}

QPlainTextEdit#transcription_text QScrollBar::handle:vertical {
    background-color: #adb5bd;
    border-radius: 5px;
    min-height: 30px;
}

QPlainTextEdit#transcription_text QScrollBar::handle:vertical:hover {
    background-color: #6c757d;
}

QPlainTextEdit#transcription_text QScrollBar::add-line:vertical,
QPlainTextEdit#transcription_text QScrollBar::sub-line:vertical {
    height: 0px;
}

QPlainTextEdit#transcription_text QScrollBar::add-page:vertical,
QPlainTextEdit#transcription_text QScrollBar::sub-page:vertical {
    background: none;
}

/* Custom Scrollbars for Translation Text Area */
QPlainTextEdit#translation_text QScrollBar:vertical {
    background-color: #f8f9fa;
    width: 10px;
    border: none;
    border-radius: 5px;
}

QPlainTextEdit#translation_text QScrollBar::handle:vertical {
    background-color: #adb5bd;
    border-radius: 5px;
    min-height: 30px;
}

QPlainTextEdit#translation_text QScrollBar::handle:vertical:hover {
    background-color: #6c757d;
}

QPlainTextEdit#translation_text QScrollBar::add-line:vertical,
QPlainTextEdit#translation_text QScrollBar::sub-line:vertical {
    height: 0px;
}

QPlainTextEdit#translation_text QScrollBar::add-page:vertical,
QPlainTextEdit#translation_text QScrollBar::sub-page:vertical {
    background: none;
}

/* Visual State Indicators for Text Areas */
/* Error State - Red border for error conditions */
QPlainTextEdit#transcription_text[error="true"],
QPlainTextEdit#translation_text[error="true"] {
    border: 2px solid #dc3545;
}

/* Warning State - Orange border for warnings */
QPlainTextEdit#transcription_text[warning="true"],
QPlainTextEdit#translation_text[warning="true"] {
    border: 2px solid #fd7e14;
}

/* Success State - Green border for successful operations */
QPlainTextEdit#transcription_text[success="true"],
QPlainTextEdit#translation_text[success="true"] {
    border: 2px solid #28a745;
}

/* Realtime Record Button */
QPushButton#record_button {
    background-color: #4CAF50;
    color: #ffffff;
    font-weight: bold;
    min-height: 40px;
}

QPushButton#record_button:hover {
    background-color: #45a049;
}

QPushButton#record_button[recording="true"] {
    background-color: #f44336;
}

QPushButton#record_button[recording="true"]:hover {
    background-color: #da190b;
}

/* Realtime Record Group Boxes */

/* Audio Input Group - Enhanced with background and improved spacing */
QGroupBox#audio_input_group {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    margin: 8px 0px;
    padding: 15px;
    font-weight: bold;
}

QGroupBox#audio_input_group::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    color: #212529;
    font-size: 14px;
    font-weight: 600;
}

/* Language Settings Group */
QGroupBox#language_group {
    background-color: transparent;
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    margin: 8px 0px;
    padding: 15px;
    font-weight: bold;
}

QGroupBox#language_group::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    color: #333333;
    font-size: 14px;
    font-weight: 600;
}

/* Recording Control Group */
QGroupBox#control_group {
    background-color: transparent;
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    margin: 8px 0px;
    padding: 15px;
    font-weight: bold;
}

QGroupBox#control_group::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    color: #333333;
    font-size: 14px;
    font-weight: 600;
}

/* Text Display Group Boxes */
QGroupBox#transcription_group,
QGroupBox#translation_group {
    background-color: transparent;
    border: 1px solid #d0d0d0;
    border-radius: 6px;
    margin: 0px;
    padding: 12px;
    font-weight: bold;
}

QGroupBox#transcription_group::title,
QGroupBox#translation_group::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    color: #333333;
    font-size: 13px;
    font-weight: 600;
}

/* Realtime Record Labels */
QLabel#input_label,
QLabel#gain_label,
QLabel#source_lang_label,
QLabel#target_lang_label,
QLabel#duration_label {
    color: #333333;
    background-color: transparent;
}

/* Enhanced Hover Effects for Audio Input Controls */
/* Audio input device selector - Enhanced hover with blue border */
QGroupBox#audio_input_group QComboBox:hover {
    border: 2px solid #0078d4;
    background-color: #f8f9fa;
}

/* Gain slider - Enhanced hover with darker handle */
QGroupBox#audio_input_group QSlider::handle:horizontal:hover {
    background-color: #005a9e;
}

/* Model Management Page Styles */

/* Model Cards - Downloaded */
QFrame#model-card-downloaded {
    background-color: #f0f7f0;
    border: 1px solid #c8e6c9;
    border-radius: 8px;
    padding: 15px;
}

QFrame#model-card-downloaded:hover {
    border: 2px solid #81c784;
    padding: 14px;
}

/* Model Cards - Available */
QFrame#model-card-available {
    background-color: #fafafa;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 15px;
}

QFrame#model-card-available:hover {
    border: 2px solid #0078d4;
    padding: 14px;
}

/* Model Cards - Downloading */
QFrame#model-card-downloading {
    background-color: #e3f2fd;
    border: 1px solid #90caf9;
    border-radius: 8px;
    padding: 15px;
}

QFrame#model-card-downloading:hover {
    border: 2px solid #42a5f5;
    padding: 14px;
}

