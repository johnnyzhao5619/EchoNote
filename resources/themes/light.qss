    border-color: #4CAF50;
    color: #1b5e20;
}

QLabel#feedback_label[state="info"] {
    background-color: #26333d;
    border-color: #005a9e;
    color: #0d47a1;
}

/* ========================================
   标签页样式
   ======================================== */

/* 主标签页容器 */
QTabWidget#main_tabs {
    background-color: transparent;
    border: none;
}

QTabWidget#main_tabs::pane {
    background-color: #f5f5f5;
    border: 1px solid #e1dfdd;
    border-radius: 6px;
    top: -1px;
}

QTabWidget#main_tabs::tab-bar {
    alignment: left;
}

/* 标签页按钮 */
QTabWidget#main_tabs QTabBar::tab {
    background-color: #f3f2f1;
    color: #666666;
    border: 1px solid #e1dfdd;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 10px 20px;
    margin-right: 2px;
    font-size: 13px;
    font-weight: 500;
}

QTabWidget#main_tabs QTabBar::tab:selected {
    background-color: #f5f5f5;
    color: #333333;
    border-color: #e1dfdd;
}

QTabWidget#main_tabs QTabBar::tab:hover:!selected {
    background-color: #e8e8e8;
    color: #d0d0d0;
}

/* 标签页内容 */
QWidget#recording_tab,
QWidget#transcription_tab,
QWidget#translation_tab,
QWidget#markers_tab {
    background-color: transparent;
}

/* 文本工具栏 */
QWidget#text_toolbar,
QWidget#markers_toolbar {
    background-color: #f3f2f1;
    border-bottom: 1px solid #e1dfdd;
}

QPushButton#clear_markers_button {
    background-color: #ffffff;
    color: #d32f2f;
    border: 1px solid #d32f2f;
    border-radius: 6px;
    padding: 6px 12px;
    font-weight: 600;
}

QPushButton#clear_markers_button:hover {
    background-color: #d32f2f;
    color: #ffffff;
}

QLabel#word_count_label {
    color: #1976d2;
    font-size: 12px;
    font-weight: 600;
}

/* 状态区域 */
QWidget#status_section {
    background-color: transparent;
}

QWidget#status_bar {
    background-color: #f3f2f1;
    border: 1px solid #e1dfdd;
    border-radius: 6px;
}

