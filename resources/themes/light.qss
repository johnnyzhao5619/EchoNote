/* EchoNote Light Theme - Teams Style */

/* Global Styles */
* {
    font-family: "Segoe UI", -apple-system, BlinkMacSystemFont, Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
}

QMainWindow {
    background-color: #f3f2f1;
}

/* Page Title */
QLabel#page_title {
    font-size: 20px;
    font-weight: bold;
    color: #333333;
    padding: 2px 0px 6px 0px;
}

/* Section Title */
QLabel#section_title {
    font-size: 16px;
    font-weight: bold;
    color: #333333;
    padding: 5px 0px;
}

/* General Labels */
QLabel#engine_label {
    color: #333333;
    background-color: transparent;
}

QLabel#model_label {
    color: #333333;
    font-weight: 600;
    background-color: transparent;
}

QLabel#subtitle_label {
    color: #495057;
    font-size: 13px;
    font-weight: 600;
    background-color: transparent;
}

QLabel#info_label {
    color: #6c757d;
    font-size: 12px;
    background-color: transparent;
}

/* Sidebar Styles */
#sidebar {
    background-color: #f3f2f1;
    border-right: 1px solid #e1dfdd;
}

#sidebar QPushButton {
    background-color: transparent;
    color: #323130;
    border: none;
    text-align: left;
    padding: 12px 20px;
    margin: 2px 8px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 400;
}

#sidebar QPushButton:hover {
    background-color: #edebe9;
    color: #201f1e;
}

#sidebar QPushButton:checked,
#sidebar QPushButton[active="true"] {
    background-color: #2196F3;
    color: #ffffff;
    font-weight: 600;
}

#sidebar QPushButton:pressed {
    background-color: #1976D2;
    color: #ffffff;
}

/* Content Area Styles */
QWidget {
    background-color: #ffffff;
    color: #323130;
}

/* Labels */
QLabel {
    color: #323130;
    background-color: transparent;
}

/* Settings Dialog Labels */
QDialog QLabel {
    color: #212529;
    font-size: 13px;
    background-color: transparent;
}

#error_message {
    color: #d32f2f;
    font-weight: bold;
}

/* Buttons */
QPushButton {
    background-color: #2196F3;
    color: #ffffff;
    border: 1px solid #2196F3;
    border-radius: 6px;
    padding: 8px 16px;
    min-width: 88px;
    min-height: 34px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #1976D2;
    color: #ffffff;
    border: 1px solid #1976D2;
}

QPushButton:pressed {
    background-color: #106ebe;
    color: #ffffff;
    border: 1px solid #106ebe;
}

QPushButton:disabled {
    background-color: #f3f2f1;
    color: #a19f9d;
    border: 1px solid #c8c6c4;
}

/* ========================================
   Calendar Hub Specific Buttons
   ======================================== */

/* View switching buttons (月/周/日) */
QPushButton#view_button {
    background-color: #fafafa;
    color: #323130;
    border: 1px solid #8a8886;
    border-radius: 6px;
    padding: 8px 16px;
    min-width: 80px;
    min-height: 34px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#view_button:hover {
    background-color: #f3f2f1;
    color: #201f1e;
    border: 1px solid #2196F3;
}

QPushButton#view_button:checked {
    background-color: #2196F3;
    color: #ffffff;
    border: 1px solid #2196F3;
}

QPushButton#view_button:pressed {
    background-color: #106ebe;
    color: #ffffff;
    border: 1px solid #106ebe;
}

/* Primary action button (创建事件) */
QPushButton#primary_button {
    background-color: #2196F3;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 8px 20px;
    min-width: 100px;
    min-height: 34px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#primary_button:hover {
    background-color: #106ebe;
    color: #ffffff;
}

QPushButton#primary_button:pressed {
    background-color: #005a9e;
    color: #ffffff;
}

QPushButton#primary_button:disabled {
    background-color: #e9ecef;
    color: #adb5bd;
}

/* ========================================
   Batch Transcribe Specific Buttons
   ======================================== */

/* Import and action buttons */
QPushButton#import_file_btn,
QPushButton#import_folder_btn,
QPushButton#clear_queue_btn {
    background-color: #ffffff;
    color: #323130;
    border: 1px solid #8a8886;
    border-radius: 6px;
    padding: 8px 16px;
    min-width: 100px;
    min-height: 34px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#import_file_btn:hover,
QPushButton#import_folder_btn:hover,
QPushButton#clear_queue_btn:hover {
    background-color: #f3f2f1;
    color: #201f1e;
    border: 1px solid #2196F3;
}

QPushButton#import_file_btn:pressed,
QPushButton#import_folder_btn:pressed,
QPushButton#clear_queue_btn:pressed {
    background-color: #e9ecef;
    color: #212529;
    border: 1px solid #106ebe;
}

QPushButton#import_file_btn:disabled,
QPushButton#import_folder_btn:disabled,
QPushButton#clear_queue_btn:disabled {
    background-color: #f3f2f1;
    color: #adb5bd;
    border: 2px solid #e9ecef;
}

QComboBox#model_combo,
QComboBox#engine_combo {
    min-width: 160px;
}

QListWidget#task_list {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 6px;
    padding: 6px;
}

/* Text Inputs */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    color: #323130;
    border: 1px solid #8a8886;
    border-radius: 2px;
    padding: 6px 10px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #2196F3;
    padding: 5px 9px;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #f3f2f1;
    color: #a19f9d;
}

#error_details {
    background-color: #fff8f8;
    border: 1px solid #ffcccc;
    font-family: "Courier New", Courier, monospace;
    font-size: 12px;
}

/* Combo Boxes and Date Editors */
QComboBox, QDateEdit, QDateTimeEdit {
    background-color: #ffffff;
    color: #323130;
    border: 1px solid #8a8886;
    border-radius: 4px;
    padding: 8px 14px;
    padding-right: 28px;
    min-width: 120px;
    min-height: 32px;
    font-size: 14px;
    font-weight: 400;
}

QComboBox:hover, QDateEdit:hover, QDateTimeEdit:hover {
    background-color: #f3f2f1;
    border: 1px solid #2196F3;
}

QComboBox:focus, QDateEdit:focus, QDateTimeEdit:focus {
    background-color: #ffffff;
    border: 2px solid #2196F3;
    padding: 7px 13px;
    padding-right: 27px;
}

QComboBox:disabled, QDateEdit:disabled, QDateTimeEdit:disabled {
    background-color: #f3f2f1;
    color: #a19f9d;
    border: 1px solid #c8c6c4;
}

QComboBox::drop-down {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 24px;
    border-top: none;
    border-right: none;
    border-bottom: none;
    border-left: 1px solid #c8c6c4;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    background-color: transparent;
    padding: 0;
    margin: 0;
}

QComboBox::drop-down:hover {
    background-color: #f3f2f1;
    border-top: none;
    border-right: none;
    border-bottom: none;
    border-left: 1px solid #2196F3;
}

QComboBox::drop-down:pressed {
    background-color: #2196F3;
    border-top: none;
    border-right: none;
    border-bottom: none;
    border-left: 1px solid #2196F3;
}

QDateEdit::drop-down, QDateTimeEdit::drop-down {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 24px;
    background-color: transparent;
    border-top: none;
    border-right: none;
    border-bottom: none;
    border-left: 1px solid #c8c6c4;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    padding: 0;
    margin: 0;
}

QComboBox::down-arrow {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='10' height='6' viewBox='0 0 10 6'><path d='M1 1L5 5L9 1' stroke='%23605e5c' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
    width: 10px;
    height: 6px;
}

QComboBox::down-arrow:disabled {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='10' height='6' viewBox='0 0 10 6'><path d='M1 1L5 5L9 1' stroke='%23a19f9d' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
}

QDateEdit::down-arrow, QDateTimeEdit::down-arrow {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='10' height='6' viewBox='0 0 10 6'><path d='M1 1L5 5L9 1' stroke='%23605e5c' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
    width: 10px;
    height: 6px;
}

QDateEdit::down-arrow:disabled, QDateTimeEdit::down-arrow:disabled {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='10' height='6' viewBox='0 0 10 6'><path d='M1 1L5 5L9 1' stroke='%23a19f9d' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #323130;
    border: 1px solid #8a8886;
    border-radius: 0;
    padding: 0;
    margin: 0;
    selection-background-color: #2196F3;
    selection-color: #ffffff;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 8px 10px;
    border: none;
    min-height: 24px;
    border-radius: 0;
    margin: 0;
    background-color: transparent;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #f3f2f1;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #2196F3;
    color: #ffffff;
    font-weight: 600;
}

/* Progress Bars */
QProgressBar {
    background-color: #edebe9;
    border: none;
    border-radius: 2px;
    height: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #2196F3;
    border-radius: 2px;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #c0c0c0;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a0a0a0;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Dialogs */
QDialog {
    background-color: #ffffff;
}

/* Dialog Buttons - Ensure high contrast */
QDialog QPushButton {
    background-color: #2196F3;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    min-width: 90px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QDialog QPushButton:hover {
    background-color: #1976D2;
    color: #ffffff;
}

QDialog QPushButton:pressed {
    background-color: #0D47A1;
    color: #ffffff;
}

QDialog QPushButton:disabled {
    background-color: #f3f2f1;
    color: #a19f9d;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #d0d0d0;
    background-color: #ffffff;
}

QTabBar::tab {
    background-color: #f0f0f0;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-bottom: 2px solid #2196F3;
}

QTabBar::tab:hover {
    background-color: #e8e8e8;
}

/* ========================================
   Lists - General Styles
   ======================================== */

QListWidget, QTreeWidget, QTableWidget {
    background-color: #ffffff;
    color: #323130;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    padding: 4px;
}

QListWidget::item, QTreeWidget::item, QTableWidget::item {
    padding: 8px 12px;
    border-radius: 2px;
    margin: 1px 0px;
    border: 1px solid transparent;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #f3f2f1;
    color: #2196F3;
    border: 1px solid #2196F3;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #faf9f8;
    border: 1px solid #e1dfdd;
}

QListWidget::item:selected:hover, QTreeWidget::item:selected:hover, QTableWidget::item:selected:hover {
    background-color: #edebe9;
    color: #1976D2;
    border: 1px solid #1976D2;
}

/* Alternate row colors for better readability */
QListWidget::item:alternate, QTreeWidget::item:alternate, QTableWidget::item:alternate {
    background-color: #faf9f8;
}

/* Focus state */
QListWidget:focus::item:selected, QTreeWidget:focus::item:selected, QTableWidget:focus::item:selected {
    background-color: #edebe9;
    color: #1976D2;
    border: 2px solid #2196F3;
}

QListWidget[role="settings-nav"] {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 6px;
    padding: 4px;
}

QListWidget[role="settings-nav"]:focus {
    outline: none;
    border: 1px solid #e1dfdd;
}

QListWidget[role="settings-nav"]::item {
    margin: 2px 0;
    padding: 9px 12px;
    border-radius: 4px;
}

QListWidget[role="settings-nav"]::item:hover {
    background-color: #f3f2f1;
    border: 1px solid #d2d0ce;
}

QListWidget[role="settings-nav"]::item:selected {
    background-color: #2196F3;
    color: #ffffff;
    border: 1px solid #2196F3;
}

/* Headers */
QHeaderView::section {
    background-color: #f0f0f0;
    color: #333333;
    border: none;
    border-right: 1px solid #d0d0d0;
    border-bottom: 1px solid #d0d0d0;
    padding: 8px;
    font-weight: bold;
}

/* Checkboxes */
QCheckBox {
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #d0d0d0;
    border-radius: 3px;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #2196F3;
    border-color: #2196F3;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEwIDNMNC41IDguNUwyIDYiIHN0cm9rZT0id2hpdGUiIHN0cm9rZS13aWR0aD0iMiIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIiBzdHJva2UtbGluZWpvaW49InJvdW5kIi8+Cjwvc3ZnPgo=);
}

QCheckBox::indicator:hover {
    border-color: #2196F3;
}

/* Radio Buttons */
QRadioButton {
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #d0d0d0;
    border-radius: 9px;
    background-color: #ffffff;
}

QRadioButton::indicator:checked {
    background-color: #2196F3;
    border-color: #2196F3;
}

QRadioButton::indicator:checked::after {
    content: "";
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background-color: #ffffff;
}

QRadioButton::indicator:hover {
    border-color: #2196F3;
}

/* Spin Boxes */
QSpinBox, QDoubleSpinBox {
    background-color: #ffffff;
    color: #323130;
    border: 1px solid #8a8886;
    border-radius: 2px;
    padding: 8px 12px;
    padding-right: 32px;
    font-size: 14px;
    font-weight: 400;
    min-width: 80px;
    min-height: 32px;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    background-color: #f3f2f1;
    border: 1px solid #605e5c;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    background-color: #ffffff;
    border: 2px solid #2196F3;
    padding: 7px 11px;
    padding-right: 31px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: #ffffff;
    border-left: 1px solid #c8c6c4;
    border-bottom: 1px solid #c8c6c4;
    border-top-right-radius: 2px;
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    padding: 0;
    margin: 0;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover {
    background-color: #f3f2f1;
    border-left: 1px solid #2196F3;
    border-bottom: 1px solid #2196F3;
}

QSpinBox::up-button:pressed, QDoubleSpinBox::up-button:pressed {
    background-color: #2196F3;
    border-left: 1px solid #2196F3;
    border-bottom: 1px solid #2196F3;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: #ffffff;
    border-left: 1px solid #c8c6c4;
    border-top: 1px solid #c8c6c4;
    border-bottom-right-radius: 2px;
    subcontrol-origin: padding;
    subcontrol-position: bottom right;
    width: 20px;
    padding: 0;
    margin: 0;
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #f3f2f1;
    border-left: 1px solid #2196F3;
    border-top: 1px solid #2196F3;
}

QSpinBox::down-button:pressed, QDoubleSpinBox::down-button:pressed {
    background-color: #2196F3;
    border-left: 1px solid #2196F3;
    border-top: 1px solid #2196F3;
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='9' height='6' viewBox='0 0 9 6'><path d='M1 5L4.5 1L8 5' stroke='%23605e5c' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
    width: 9px;
    height: 6px;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='9' height='6' viewBox='0 0 9 6'><path d='M1 1L4.5 5L8 1' stroke='%23605e5c' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
    width: 9px;
    height: 6px;
}

QSpinBox::up-arrow:disabled, QDoubleSpinBox::up-arrow:disabled {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='9' height='6' viewBox='0 0 9 6'><path d='M1 5L4.5 1L8 5' stroke='%23a19f9d' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
}

QSpinBox::down-arrow:disabled, QDoubleSpinBox::down-arrow:disabled {
    image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='9' height='6' viewBox='0 0 9 6'><path d='M1 1L4.5 5L8 1' stroke='%23a19f9d' stroke-width='1.4' fill='none' stroke-linecap='round' stroke-linejoin='round'/></svg>");
}

/* Sliders */
QSlider::groove:horizontal {
    background-color: #e0e0e0;
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #2196F3;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #106ebe;
}

/* Tooltips */
QToolTip {
    background-color: #333333;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
}

/* Menu Bar */
QMenuBar {
    background-color: #ffffff;
    color: #333333;
    border-bottom: 1px solid #d0d0d0;
}

QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #e8f4fd;
}

QMenuBar::item:pressed {
    background-color: #d0e8f7;
}

/* Menus */
QMenu {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #d0d0d0;
    border-radius: 4px;
}

QMenu::item {
    padding: 8px 24px 8px 12px;
}

QMenu::item:selected {
    background-color: #e8f4fd;
}

QMenu::separator {
    height: 1px;
    background-color: #d0d0d0;
    margin: 4px 0;
}

/* Status Bar */
QStatusBar {
    background-color: #f0f0f0;
    color: #333333;
    border-top: 1px solid #d0d0d0;
}

/* ========================================
   Timeline Event Cards
   ======================================== */

/* Event card container */
#event_card {
    background-color: #ffffff;
    border: 1px solid #d8dde6;
    border-radius: 10px;
    padding: 8px;
}

#event_card:hover {
    background-color: #f7faff;
    border: 1px solid #2196F3;
}

/* Event card labels */
#event_card QLabel {
    background-color: transparent;
    color: #212529;
}

#event_card QLabel#time_label,
#event_card QLabel#detail_label {
    color: #5f6b7a;
    font-size: 12px;
}

#event_card QLabel#description_label {
