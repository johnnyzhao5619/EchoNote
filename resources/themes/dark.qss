/* EchoNote Dark Theme - Teams Style */

/* Global Styles */
* {
    font-family: "Segoe UI", -apple-system, BlinkMacSystemFont, Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
}

QMainWindow {
    background-color: #252423;
}

/* Page Title */
QLabel#page_title {
    font-size: 20px;
    font-weight: bold;
    color: #e0e0e0;
    padding: 5px 0px 10px 0px;
}

/* Section Title */
QLabel#section_title {
    font-size: 16px;
    font-weight: bold;
    color: #e0e0e0;
    padding: 5px 0px;
}

/* General Labels */
QLabel#engine_label {
    color: #e0e0e0;
    background-color: transparent;
}

/* Sidebar Styles */
#sidebar {
    background-color: #201f1e;
    border-right: 1px solid #323130;
}

#sidebar QPushButton {
    background-color: transparent;
    color: #ffffff;
    border: none;
    text-align: left;
    padding: 12px 20px;
    margin: 2px 8px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 400;
}

#sidebar QPushButton:hover {
    background-color: #292827;
    color: #ffffff;
}

#sidebar QPushButton:checked,
#sidebar QPushButton[active="true"] {
    background-color: #6264a7;
    color: #ffffff;
    font-weight: 600;
}

#sidebar QPushButton:pressed {
    background-color: #464775;
    color: #ffffff;
}

/* Content Area Styles */
QWidget {
    background-color: #292827;
    color: #ffffff;
}

/* Labels */
QLabel {
    color: #ffffff;
    background-color: transparent;
}

/* Ensure all QLabel variants have transparent background */
QWidget QLabel,
QFrame QLabel,
QListWidget QLabel,
QDialog QLabel {
    background-color: transparent;
}

/* Settings Dialog Labels */
QDialog QLabel {
    color: #ffffff;
    font-size: 13px;
    background-color: transparent;
}

#error_message {
    color: #f48fb1;
    font-weight: bold;
}

/* Buttons */
QPushButton {
    background-color: #6264a7;
    color: #ffffff;
    border: 1px solid #6264a7;
    border-radius: 4px;
    padding: 10px 20px;
    min-width: 90px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #464775;
    color: #ffffff;
    border: 1px solid #464775;
}

QPushButton:pressed {
    background-color: #33344a;
    color: #ffffff;
    border: 1px solid #33344a;
}

QPushButton:disabled {
    background-color: #323130;
    color: #8a8886;
    border: 1px solid #484644;
}

/* Secondary Buttons */
QPushButton[secondary="true"] {
    background-color: #292827;
    color: #ffffff;
    border: 1px solid #605e5c;
    border-radius: 4px;
    padding: 10px 20px;
    min-width: 90px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton[secondary="true"]:hover {
    background-color: #323130;
    color: #ffffff;
    border: 1px solid #8a8886;
}

QPushButton[secondary="true"]:pressed {
    background-color: #201f1e;
    color: #ffffff;
    border: 1px solid #ffffff;
}

/* ========================================
   Calendar Hub Specific Buttons
   ======================================== */

/* View switching buttons (月/周/日) */
QPushButton#view_button {
    background-color: #353535;
    color: #b0b0b0;
    border: 2px solid #484644;
    border-radius: 6px;
    padding: 10px 20px;
    min-width: 80px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#view_button:hover {
    background-color: #3a3a3a;
    color: #e0e0e0;
    border: 2px solid #606060;
}

QPushButton#view_button:checked {
    background-color: #505050;
    color: #ffffff;
    border: 2px solid #606060;
}

QPushButton#view_button:pressed {
    background-color: #454545;
    color: #ffffff;
    border: 2px solid #707070;
}

/* Primary action button (创建事件) */
QPushButton#primary_button {
    background-color: #505050;
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 10px 24px;
    min-width: 100px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#primary_button:hover {
    background-color: #5a5a5a;
    color: #ffffff;
}

QPushButton#primary_button:pressed {
    background-color: #454545;
    color: #ffffff;
}

QPushButton#primary_button:disabled {
    background-color: #2a2a2a;
    color: #666666;
}

/* ========================================
   Batch Transcribe Specific Buttons
   ======================================== */

/* Import and action buttons */
QPushButton#import_file_btn,
QPushButton#import_folder_btn,
QPushButton#clear_queue_btn {
    background-color: #353535;
    color: #b0b0b0;
    border: 2px solid #484644;
    border-radius: 6px;
    padding: 10px 20px;
    min-width: 100px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton#import_file_btn:hover,
QPushButton#import_folder_btn:hover,
QPushButton#clear_queue_btn:hover {
    background-color: #3a3a3a;
    color: #e0e0e0;
    border: 2px solid #6264a7;
}

QPushButton#import_file_btn:pressed,
QPushButton#import_folder_btn:pressed,
QPushButton#clear_queue_btn:pressed {
    background-color: #2a2a2a;
    color: #ffffff;
    border: 2px solid #2196f3;
}

QPushButton#import_file_btn:disabled,
QPushButton#import_folder_btn:disabled,
QPushButton#clear_queue_btn:disabled {
    background-color: #2a2a2a;
    color: #666666;
    border: 2px solid #3a3a3a;
}

/* Text Inputs */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #323130;
    color: #ffffff;
    border: 1px solid #605e5c;
    border-radius: 2px;
    padding: 6px 10px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #6264a7;
    padding: 5px 9px;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #201f1e;
    color: #8a8886;
}

#error_details {
    background-color: #3a2a2a;
    border: 1px solid #5a3a3a;
    font-family: "Courier New", Courier, monospace;
    font-size: 12px;
}

/* Combo Boxes and Date Pickers */
QComboBox, QDateEdit, QDateTimeEdit {
    background-color: #323130;
    color: #ffffff;
    border: 1px solid #605e5c;
    border-radius: 4px;
    padding: 8px 14px;
    padding-right: 28px;
    min-width: 120px;
    min-height: 32px;
    font-size: 14px;
    font-weight: 400;
}

QComboBox:hover, QDateEdit:hover, QDateTimeEdit:hover {
    background-color: #292827;
    border: 1px solid #6264a7;
}

QComboBox:focus, QDateEdit:focus, QDateTimeEdit:focus {
    background-color: #323130;
    border: 2px solid #6264a7;
    padding: 7px 13px;
    padding-right: 27px;
}

QComboBox:disabled, QDateEdit:disabled, QDateTimeEdit:disabled {
    background-color: #201f1e;
    color: #605e5c;
    border: 1px solid #484644;
}

/* Date Edit Calendar Popup */
QDateEdit::drop-down, QDateTimeEdit::drop-down {
    border: none;
    width: 24px;
    background-color: transparent;
}

QDateEdit::down-arrow, QDateTimeEdit::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 7px solid #e0e0e0;
    margin-right: 10px;
}

QCalendarWidget {
    background-color: #292827;
    color: #e0e0e0;
}

QCalendarWidget QToolButton {
    background-color: #404040;
    color: #e0e0e0;
    border: 1px solid #5a5a5a;
    border-radius: 4px;
    padding: 6px;
}

QCalendarWidget QToolButton:hover {
    background-color: #484644;
    border: 1px solid #6a6a6a;
}

QCalendarWidget QMenu {
    background-color: #292827;
    color: #e0e0e0;
}

QCalendarWidget QSpinBox {
    background-color: #292827;
    color: #e0e0e0;
    border: 1px solid #484644;
}

QCalendarWidget QAbstractItemView {
    background-color: #292827;
    color: #e0e0e0;
    selection-background-color: #2d4a5a;
    selection-color: #90caf9;
}

QCalendarWidget QAbstractItemView:enabled {
    color: #e0e0e0;
}

QCalendarWidget QAbstractItemView:disabled {
    color: #666666;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 24px;
    border-left: 1px solid #484644;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    background-color: #323130;
}

QComboBox::drop-down:hover {
    background-color: #484644;
    border-left: 1px solid #6264a7;
}

QComboBox::drop-down:pressed {
    background-color: #6264a7;
}

QComboBox::down-arrow {
    image: none;
    width: 0px;
    height: 0px;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 7px solid #8a8886;
}

QComboBox::down-arrow:hover {
    border-top: 7px solid #6264a7;
}

QComboBox::down-arrow:pressed {
    border-top: 7px solid #ffffff;
}

QComboBox QAbstractItemView {
    background-color: #292827;
    color: #ffffff;
    border: 1px solid #605e5c;
    border-radius: 4px;
    padding: 4px;
    selection-background-color: #6264a7;
    selection-color: #ffffff;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 8px 12px;
    border: none;
    min-height: 24px;
    border-radius: 2px;
    margin: 1px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #323130;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #6264a7;
    color: #ffffff;
}

/* Progress Bars */
QProgressBar {
    background-color: #323130;
    border: none;
    border-radius: 2px;
    height: 8px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #6264a7;
    border-radius: 2px;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #292827;
    width: 12px;
    border: none;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #484644;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #5a5a5a;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: #292827;
    height: 12px;
    border: none;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #484644;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #5a5a5a;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* Scroll Area */
QScrollArea {
    background-color: transparent;
    border: none;
}

/* Dialogs */
QDialog {
    background-color: #292827;
}

/* Dialog Buttons - Ensure high contrast */
QDialog QPushButton {
    background-color: #6264a7;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 10px 20px;
    min-width: 90px;
    min-height: 36px;
    font-weight: 600;
    font-size: 14px;
}

QDialog QPushButton:hover {
    background-color: #464775;
    color: #ffffff;
}

QDialog QPushButton:pressed {
    background-color: #33344a;
    color: #ffffff;
}

QDialog QPushButton:disabled {
    background-color: #323130;
    color: #8a8886;
}

/* Dialog Secondary Buttons */
QDialog QPushButton[secondary="true"] {
    background-color: #292827;
    color: #ffffff;
    border: 1px solid #605e5c;
    font-weight: 600;
}

QDialog QPushButton[secondary="true"]:hover {
    background-color: #323130;
    color: #ffffff;
    border: 1px solid #8a8886;
}

QDialog QPushButton[secondary="true"]:pressed {
    background-color: #201f1e;
    color: #ffffff;
    border: 1px solid #ffffff;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #484644;
    background-color: #292827;
}

QTabBar::tab {
    background-color: #3a3a3a;
    color: #e0e0e0;
    border: 1px solid #484644;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #292827;
    border-bottom: 2px solid #6264a7;
}

QTabBar::tab:hover {
    background-color: #484644;
}

/* ========================================
   Lists - General Styles
   ======================================== */

QListWidget, QTreeWidget, QTableWidget {
    background-color: #292827;
    color: #ffffff;
    border: 1px solid #484644;
    border-radius: 4px;
    padding: 4px;
}

QListWidget::item, QTreeWidget::item, QTableWidget::item {
    padding: 8px 12px;
    border-radius: 2px;
    margin: 1px 0px;
    border: 1px solid transparent;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #323130;
    color: #6264a7;
    border: 1px solid #6264a7;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #323130;
    border: 1px solid #484644;
}

QListWidget::item:selected:hover, QTreeWidget::item:selected:hover, QTableWidget::item:selected:hover {
    background-color: #201f1e;
    color: #464775;
    border: 1px solid #464775;
}

/* Alternate row colors for better readability */
QListWidget::item:alternate, QTreeWidget::item:alternate, QTableWidget::item:alternate {
    background-color: #323130;
}

/* Focus state */
QListWidget:focus::item:selected, QTreeWidget:focus::item:selected, QTableWidget:focus::item:selected {
    background-color: #201f1e;
    color: #464775;
    border: 2px solid #6264a7;
}

/* Headers */
QHeaderView::section {
    background-color: #3a3a3a;
    color: #e0e0e0;
    border: none;
    border-right: 1px solid #484644;
    border-bottom: 1px solid #484644;
    padding: 8px;
    font-weight: bold;
}

/* Group Boxes - General */
QGroupBox {
    background-color: #292827;
    border: 2px solid #484644;
    border-radius: 8px;
    margin: 8px 0px;
    padding-top: 30px;
    padding-left: 20px;
    padding-right: 20px;
    padding-bottom: 20px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    left: 10px;
    top: 10px;
    color: #e0e0e0;
    font-size: 14px;
    font-weight: 600;
    background-color: transparent;
}

QGroupBox QLabel {
    background-color: transparent;
    color: #e0e0e0;
}

/* Checkboxes */
QCheckBox {
    spacing: 8px;
    color: #e0e0e0;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #484644;
    border-radius: 3px;
    background-color: #3a3a3a;
}

QCheckBox::indicator:checked {
    background-color: #2d4a5a;
    border-color: #6264a7;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEwIDNMNC41IDguNUwyIDYiIHN0cm9rZT0iIzkwY2FmOSIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+Cg==);
}

QCheckBox::indicator:hover {
    border-color: #6264a7;
}

/* Radio Buttons */
QRadioButton {
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #484644;
    border-radius: 9px;
    background-color: #3a3a3a;
}

QRadioButton::indicator:checked {
    background-color: #2d4a5a;
    border-color: #6264a7;
}

QRadioButton::indicator:checked::after {
    content: "";
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background-color: #90caf9;
}

QRadioButton::indicator:hover {
    border-color: #6264a7;
}

/* Spin Boxes */
QSpinBox, QDoubleSpinBox {
    background-color: #323130;
    color: #ffffff;
    border: 1px solid #605e5c;
    border-radius: 2px;
    padding: 8px 12px;
    padding-right: 32px;
    font-size: 14px;
    font-weight: 400;
    min-width: 80px;
    min-height: 32px;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    background-color: #292827;
    border: 1px solid #8a8886;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    background-color: #323130;
    border: 2px solid #6264a7;
    padding: 7px 11px;
    padding-right: 31px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: #323130;
    border: 1px solid #484644;
    border-left: 1px solid #484644;
    border-top-right-radius: 2px;
    width: 22px;
    subcontrol-position: right;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover {
    background-color: #484644;
    border: 1px solid #6264a7;
}

QSpinBox::up-button:pressed, QDoubleSpinBox::up-button:pressed {
    background-color: #6264a7;
    border: 1px solid #6264a7;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: #323130;
    border: 1px solid #484644;
    border-left: 1px solid #484644;
    border-bottom-right-radius: 2px;
    width: 22px;
    subcontrol-position: right;
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #484644;
    border: 1px solid #6264a7;
}

QSpinBox::down-button:pressed, QDoubleSpinBox::down-button:pressed {
    background-color: #6264a7;
    border: 1px solid #6264a7;
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow {
    image: none;
    border: none;
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-bottom: 6px solid #8a8886;
    margin: 0 auto;
}

QSpinBox::up-arrow:hover, QDoubleSpinBox::up-arrow:hover {
    border-bottom: 6px solid #6264a7;
}

QSpinBox::up-arrow:pressed, QDoubleSpinBox::up-arrow:pressed {
    border-bottom: 6px solid #ffffff;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow {
    image: none;
    border: none;
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #8a8886;
    margin: 0 auto;
}

QSpinBox::down-arrow:hover, QDoubleSpinBox::down-arrow:hover {
    border-top: 6px solid #6264a7;
}

QSpinBox::down-arrow:pressed, QDoubleSpinBox::down-arrow:pressed {
    border-top: 6px solid #ffffff;
}

QSpinBox:disabled, QDoubleSpinBox:disabled {
    background-color: #201f1e;
    color: #605e5c;
    border: 1px solid #484644;
}

QSpinBox::up-button:disabled, QDoubleSpinBox::up-button:disabled,
QSpinBox::down-button:disabled, QDoubleSpinBox::down-button:disabled {
    background-color: #201f1e;
    border-left: 1px solid #484644;
}

QSpinBox::up-arrow:disabled, QDoubleSpinBox::up-arrow:disabled {
    border-bottom: 5px solid #605e5c;
}

QSpinBox::down-arrow:disabled, QDoubleSpinBox::down-arrow:disabled {
    border-top: 5px solid #605e5c;
}

/* Sliders */
QSlider::groove:horizontal {
    background-color: #3a3a3a;
    height: 6px;
    border-radius: 3px;
    border: 1px solid #484644;
}

QSlider::handle:horizontal {
    background-color: #6264a7;
    width: 18px;
    height: 18px;
    margin: -7px 0;
    border-radius: 9px;
    border: 2px solid #2d4a5a;
}

QSlider::handle:horizontal:hover {
    background-color: #64b5f6;
    border: 2px solid #3d5a6a;
}

QSlider::handle:horizontal:pressed {
    background-color: #90caf9;
    border: 2px solid #1d3a4a;
}

QSlider::sub-page:horizontal {
    background-color: #6264a7;
    border-radius: 3px;
}

QSlider::add-page:horizontal {
    background-color: #3a3a3a;
    border-radius: 3px;
}

/* Tooltips */
QToolTip {
    background-color: #484644;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
}

/* Menu Bar */
QMenuBar {
    background-color: #292827;
    color: #e0e0e0;
    border-bottom: 1px solid #484644;
}

QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #3a3a3a;
}

QMenuBar::item:pressed {
    background-color: #484644;
}

/* Menus */
QMenu {
    background-color: #292827;
    color: #e0e0e0;
    border: 1px solid #484644;
    border-radius: 4px;
}

QMenu::item {
    padding: 8px 24px 8px 12px;
}

QMenu::item:selected {
    background-color: #3a3a3a;
}

QMenu::separator {
    height: 1px;
    background-color: #484644;
    margin: 4px 0;
}

/* Status Bar */
QStatusBar {
    background-color: #252525;
    color: #e0e0e0;
    border-top: 1px solid #3a3a3a;
}

/* ========================================
   Timeline Event Cards
   ======================================== */

/* Event card container */
#event_card {
    background-color: #353535;
    border: 2px solid #484644;
    border-radius: 8px;
    padding: 4px;
}

#event_card:hover {
