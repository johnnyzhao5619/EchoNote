/* 可视化区域 */
QWidget#visualizer_section {
    background-color: transparent;
}

/* 警告标签 */
QLabel#warning_label {
    background-color: #3d2626;
    color: #ffcdd2;
    border: 1px solid #f44336;
    border-radius: 6px;
    padding: 10px 15px;
    font-size: 13px;
}

/* 文本面板 */
QWidget#transcription_panel,
QWidget#translation_panel,
QWidget#markers_panel {
    background-color: #252525;
    border: 1px solid #3a3a3a;
    border-radius: 6px;
}

/* 面板标题栏 */
QWidget#panel_header {
    background-color: #292827;
    border-bottom: 1px solid #3a3a3a;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

QLabel#panel_title {
    color: #e0e0e0;
    font-size: 13px;
    font-weight: 600;
}

/* 图标按钮 */
QPushButton#icon_button {
    background-color: transparent;
    color: #b0b0b0;
    border: none;
    border-radius: 4px;
    font-size: 14px;
}

QPushButton#icon_button:hover {
    background-color: #3a3a3a;
    color: #e0e0e0;
}

QPushButton#icon_button:pressed {
    background-color: #292827;
}

/* 文本编辑器 - 优化 */
QPlainTextEdit#transcription_text,
QPlainTextEdit#translation_text {
    background-color: #1e1e1e;
    color: #e0e0e0;
    border: none;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    padding: 12px;
    font-family: "SF Mono", "Consolas", "Monaco", "Courier New", monospace;
    font-size: 13px;
    line-height: 1.6;
    selection-background-color: #264f78;
}

QPlainTextEdit#transcription_text:focus,
QPlainTextEdit#translation_text:focus {
    background-color: #252525;
}

/* 标记列表 - 优化 */
QListWidget#markers_list {
    background-color: #1e1e1e;
    color: #e0e0e0;
    border: none;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    padding: 8px;
    font-size: 12px;
}

QListWidget#markers_list::item {
    background-color: transparent;
    color: #b0b0b0;
    padding: 6px 8px;
    border-radius: 4px;
    margin: 2px 0px;
}

QListWidget#markers_list::item:hover {
    background-color: #292827;
}

/* 次要按钮 */
QPushButton#secondary_button {
    background-color: #292827;
    color: #e0e0e0;
    border: 1px solid #484644;
    border-radius: 6px;
    padding: 8px 16px;
    font-size: 13px;
    font-weight: 500;
}

QPushButton#secondary_button:hover {
    background-color: #353535;
    border-color: #5a5a5a;
}

QPushButton#secondary_button:pressed {
    background-color: #252525;
}

QPushButton#secondary_button:disabled {
    background-color: #292827;
    color: #666666;
    border-color: #3a3a3a;
}

/* 操作区域 */
QWidget#actions_section {
    background-color: transparent;
}

/* 状态指示器 */
QLabel#status_indicator {
    color: #4CAF50;
    font-size: 14px;
}

QLabel#status_indicator[state="recording"] {
    color: #f44336;
}

QLabel#status_indicator[state="ready"] {
    color: #4CAF50;
}

QLabel#status_text {
    color: #b0b0b0;
    font-size: 13px;
}

/* 录制时长显示 */
QLabel#duration_display {
    color: #90caf9;
    font-size: 16px;
    font-weight: 600;
    font-family: "SF Mono", "Consolas", "Monaco", "Courier New", monospace;
    padding: 0px 12px;
}

/* 分割器 */
QSplitter#text_splitter::handle {
    background-color: #3a3a3a;
    width: 2px;
    height: 2px;
}

QSplitter#text_splitter::handle:hover {
    background-color: #6264a7;
}

/* 反馈标签 - 优化 */
QLabel#feedback_label {
    background-color: #292827;
    color: #e0e0e0;
    border: 1px solid #484644;
    border-radius: 6px;
    padding: 10px 15px;
    font-size: 13px;
}

QLabel#feedback_label[state="error"] {
    background-color: #3d2626;
    border-color: #f44336;
    color: #ffcdd2;
}

QLabel#feedback_label[state="success"] {
    background-color: #263d26;
    border-color: #4CAF50;
    color: #c8e6c9;
}

QLabel#feedback_label[state="info"] {
    background-color: #26333d;
    border-color: #2196F3;
    color: #bbdefb;
}


/* ========================================
   标签页样式
   ======================================== */

/* 主标签页容器 */
QTabWidget#main_tabs {
    background-color: transparent;
    border: none;
}

QTabWidget#main_tabs::pane {
    background-color: #252525;
    border: 1px solid #3a3a3a;
    border-radius: 6px;
    top: -1px;
}

QTabWidget#main_tabs::tab-bar {
    alignment: left;
}

/* 标签页按钮 */
QTabWidget#main_tabs QTabBar::tab {
    background-color: #292827;
    color: #b0b0b0;
    border: 1px solid #3a3a3a;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 10px 20px;
    margin-right: 2px;
    font-size: 13px;
    font-weight: 500;
}

QTabWidget#main_tabs QTabBar::tab:selected {
    background-color: #252525;
    color: #e0e0e0;
    border-color: #3a3a3a;
}

QTabWidget#main_tabs QTabBar::tab:hover:!selected {
    background-color: #353535;
    color: #d0d0d0;
}

/* 标签页内容 */
QWidget#recording_tab,
QWidget#transcription_tab,
QWidget#translation_tab,
QWidget#markers_tab {
    background-color: transparent;
}

/* 文本工具栏 */
QWidget#text_toolbar,
QWidget#markers_toolbar {
    background-color: #292827;
    border-bottom: 1px solid #3a3a3a;
}

QLabel#word_count_label {
    color: #90caf9;
    font-size: 12px;
    font-weight: 600;
}

/* 状态区域 */
QWidget#status_section {
    background-color: transparent;
}

QWidget#status_bar {
    background-color: #292827;
    border: 1px solid #3a3a3a;
    border-radius: 6px;
}

/* 播放器时间显示 */
QLabel#player_time {
    color: #b0b0b0;
    font-size: 12px;
    font-family: "SF Mono", "Consolas", "Monaco", "Courier New", monospace;
    font-weight: 500;
}

/* 播放器进度条 */
QSlider#player_progress {
    min-height: 24px;
}

QSlider#player_progress::groove:horizontal {
    background: #3a3a3a;
    height: 4px;
    border-radius: 2px;
}

QSlider#player_progress::handle:horizontal {
    background: #6264a7;
    width: 14px;
    height: 14px;
    margin: -5px 0;
    border-radius: 7px;
}

QSlider#player_progress::handle:horizontal:hover {
    background: #64b5f6;
    width: 16px;
    height: 16px;
    margin: -6px 0;
}

QSlider#player_progress::sub-page:horizontal {
    background: #6264a7;
    border-radius: 2px;
}

QSlider#player_progress:disabled::groove:horizontal {
    background: #292827;
}

QSlider#player_progress:disabled::handle:horizontal {
    background: #484644;
}

/* 播放器音量滑块 */
QSlider#player_volume {
    min-height: 20px;
    max-height: 40px;
    min-width: 100px;
    max-width: 100px;
}

QSlider#player_volume::groove:horizontal {
    background: #3a3a3a;
    height: 3px;
    border-radius: 1px;
}

QSlider#player_volume::handle:horizontal {
    background: #90caf9;
    width: 12px;
    height: 12px;
    margin: -4px 0;
    border-radius: 6px;
}

QSlider#player_volume::handle:horizontal:hover {
    background: #bbdefb;
    width: 14px;
    height: 14px;
    margin: -5px 0;
}

QSlider#player_volume::sub-page:horizontal {
    background: #90caf9;
    border-radius: 1px;
}

