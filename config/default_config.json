{
  "version": "1.1.1",
  "database": {
    "path": "~/.echonote/data.db",
    "encryption_enabled": true
  },
  "transcription": {
    "default_engine": "faster-whisper",
    "default_output_format": "txt",
    "default_save_path": "~/Documents/EchoNote/Transcripts",
    "max_concurrent_tasks": 2,
    "max_retries": 3,
    "retry_delay": 1.0,
    "task_queue": {
      "max_concurrent_tasks": 2,
      "max_retries": 3,
      "retry_delay": 1.0
    },
    "faster_whisper": {
      "model_size": "base",
      "device": "auto",
      "compute_type": "int8",
      "model_dir": "~/.echonote/models"
    }
  },
  "realtime": {
    "default_input_source": "default",
    "default_gain": 1.0,
    "recording_format": "wav",
    "auto_save": true,
    "translation_engine": "google",
    "save_transcript": true,
    "create_calendar_event": true,
    "recording_save_path": "~/Documents/EchoNote/Recordings",
    "vad_threshold": 0.5,
    "silence_duration_ms": 2000,
    "min_audio_duration": 3.0
  },
  "calendar": {
    "default_view": "week",
    "sync_interval_minutes": 15,
    "colors": {
      "local": "#2196F3",
      "google": "#EA4335",
      "outlook": "#FF6F00"
    },
    "oauth": {
      "redirect_uri": "http://localhost:8080/callback",
      "callback_port": 8080,
      "google": {
        "client_id": "",
        "client_secret": ""
      },
      "outlook": {
        "client_id": "",
        "client_secret": ""
      }
    }
  },
  "timeline": {
    "past_days": 30,
    "future_days": 30,
    "reminder_minutes": 5,
    "auto_stop_grace_minutes": 15,
    "stop_confirmation_delay_minutes": 10,
    "page_size": 50,
    "auto_start_enabled": true
  },
  "resource_monitor": {
    "low_memory_mb": 500,
    "high_cpu_percent": 90
  },
  "ui": {
    "theme": "light",
    "language": "en_US",
    "show_loopback_install_dialog": true
  },
  "security": {
    "encryption_algorithm": "AES-256-GCM"
  }
}
